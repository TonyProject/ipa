<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:layout_width="fill_parent" android:layout_gravity="center" android:id="@+id/info_ipachan" android:adjustViewBounds="true" android:layout_height="340dip"></ImageView>
    <LinearLayout android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="wrap_content" android:id="@+id/info_like_amount_layout">
        <ImageView android:src="@drawable/like" android:layout_width="wrap_content" android:id="@+id/image_like" android:adjustViewBounds="true" android:layout_height="fill_parent"></ImageView>
        <TextView android:text="TextView" android:layout_width="wrap_content" android:id="@+id/like_amount" android:textSize="20sp" android:layout_height="fill_parent"></TextView>
        <ImageButton android:layout_width="wrap_content" android:id="@+id/like_imageButton" android:src="@drawable/like" android:layout_gravity="left" android:adjustViewBounds="true" android:layout_height="fill_parent"></ImageButton>
    </LinearLayout>
</LinearLayout>
